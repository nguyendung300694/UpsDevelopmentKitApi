            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.ShipFrom.FaxNumber, "Fax")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.ShipFrom.FaxNumber, new { @class = "form-control", @Value = "1234567999" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.ShipFrom.Address.AddressLine, "Address line:")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.ShipFrom.Address.AddressLine, new { @class = "form-control", @Value = "780 Birchmount Rd, Unit 16" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.ShipFrom.Address.City, "City:")
