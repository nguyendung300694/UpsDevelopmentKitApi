                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.Package[0].Description, "Package Description")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.Package[0].Description, new { @class = "form-control", @Value = "Goods" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.Package[0].Packaging, "Packaging code")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.Package[0].Packaging.Code, new { @class = "form-control", @Value = "02" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.Package[0].Packaging.Description, "Packaging Description")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.Package[0].Packaging.Description, new { @class = "form-control", @Value = "Package" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.Package[0].Dimensions.UnitOfMeasurement.Code, "Dimension code")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.Package[0].Dimensions.UnitOfMeasurement.Code, new { @class = "form-control", @Value = "IN" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.Package[0].Dimensions.Length, "Dimension length")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.Package[0].Dimensions.Length, new { @class = "form-control", @Value = "10" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.Package[0].Dimensions.Width, "Dimension width")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.Package[0].Dimensions.Width, new { @class = "form-control", @Value = "7" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.Package[0].Dimensions.Height, "Dimension height")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.Package[0].Dimensions.Height, new { @class = "form-control", @Value = "5" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.Package[0].PackageWeight.UnitOfMeasurement.Code, "Package weight code")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.Package[0].PackageWeight.UnitOfMeasurement.Code, new { @class = "form-control", @Value = "LBS" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.Package[0].PackageWeight.Weight, "Package weight")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.Package[0].PackageWeight.Weight, new { @class = "form-control", @Value = "7" })
            </div>
        </div>
    </div>

    <button type="submit" id="get_rate" class="btn btn-primary d-block">Process Shipment</button>

