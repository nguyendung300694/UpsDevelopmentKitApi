
@{
    ViewBag.Title = "Ship";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using UpsApi.Models.Ups.Shipping.ShipReq
@model ShipmentRequestRootObject

<h2>Shipping</h2>
<br />

<form id="form_shipping" method="post" action="/Home/ProcessShipment">
    @Html.AntiForgeryToken()
    @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.ItemizedChargesRequestedIndicator, new { @Value = "TRUE", @class = "hidden" })
    @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.RatingMethodRequestedIndicator, new { @Value = "TRUE", @class = "hidden" })
    @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.TaxInformationIndicator, new { @Value = "TRUE", @class = "hidden" })
