            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipmentRequest.Shipment.ShipFrom.Phone.Number, "Phone")
                @Html.TextBoxFor(m => m.ShipmentRequest.Shipment.ShipFrom.Phone.Number, new { @class = "form-control", @Value = "1234567890" })
